@model InvestNetwork.Models.Project

@{
    ViewBag.Title = "Создание проекта";
    Layout = "~/Views/Layouts/_Layout.cshtml";
}

@section Styles{
    <!-- Datepicker for Bootstrap(http://www.eyecon.ro/bootstrap-datepicker/) -->
    <link href="~/Styles/datepicker.css" rel="stylesheet" />
}

@section Header{
    <div class="page_title">
        <div class="container">
            <div class="title">
                <h1>@ViewBag.Title</h1>
            </div>
        </div>
    </div>
}
<div class="content_fullwidth">
    <div class="one_full">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(false)

            <fieldset>
                <div class="accrodation">
                    <h2>Встречайте, <strong>ваш новый проект</strong></h2>


                    <div class="join_row">
                        <div class="join_label">@Html.LabelFor(model => model.Name)</div>
                        <div class="join_element">
                            @Html.EditorFor(model => model.Name)
                        </div>
                    </div>

                    @Html.Partial("_LocationSelecting", Model)

                    @Html.Partial("_ScopeSelecting", Model)

                    <div class="join_row">
                        <div class="join_label">@Html.LabelFor(model => model.NecessaryFunding)</div>
                        <div class="join_element">
                            @Html.EditorFor(model => model.NecessaryFunding)
                        </div>
                    </div>

                    <div class="join_row">
                        <div class="join_label">@Html.LabelFor(model => model.ShortDescription)</div>
                        <div class="join_element">
                            @Html.TextAreaFor(model => model.ShortDescription)
                        </div>
                    </div>

                    <div class="join_row">
                        <div class="join_label">@Html.LabelFor(model => model.Description)</div>
                        <div class="join_element">
                            @Html.TextAreaFor(model => model.Description)
                        </div>
                    </div>

                    <div class="join_row">
                        <input type="submit" value="Создать" />
                    </div>
                </div>
            </fieldset>
        }
    </div>
</div>

@section Scripts{
    <!-- Datepicker for Bootstrap(http://www.eyecon.ro/bootstrap-datepicker/) -->
    <script src="@Url.Content("~/Scripts/bootstrap-datepicker.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script>

    </script>
}
