@using InvestNetwork.Models;
@model IEnumerable<Project>

@{
    ViewBag.Title = "Проекты";
    Layout = "~/Views/Layouts/_Layout.cshtml";
}

@section Styles{
}

@section Header{
    <div class="page_title">
        <div class="container">
            <div class="title">
                <h1>Откройте для себя проекты</h1>
            </div>
        </div>
    </div>
}

<div class="our_team_box_big">
    <h2>Начни  <strong>изучать!</strong></h2>
    @foreach (Project p in Model)
    {
        <div class="one_fourth">
            <div class="cont-area">
                <img src="http://placehold.it/210x230" alt="" class="teammempic">
                <ul>
                    <li><strong>@p.Name<i> by @p.AuthorFullName</i></strong></li>
                    <li><a href="#"><i class="icon-facebook icon-large"></i></a></li>
                    <li><a href="#"><i class="icon-twitter icon-large"></i></a></li>
                    <li><a href="#"><i class="icon-google-plus icon-large"></i></a></li>
                    <li><a href="#"><i class="icon-linkedin icon-large"></i></a></li>
                    <li><a href="#"><i class="icon-pinterest icon-large"></i></a></li>
                </ul>
            </div>
            <p>@p.Description</p>
        </div>
}
</div>
<div class="clearfix mar_top5"></div>

@section Scripts{
}